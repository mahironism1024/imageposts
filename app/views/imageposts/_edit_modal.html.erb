<div id="modal">
        <%= form_with(model: imagepost, local: true) do |f| %>
            <div class="form-group">
                <%= f.label "タイトル" %>
                <%= f.text_field :title, class: "form-control" %>
            </div>
            
            <div class="form-group">
                <%= f.label "説明文" %>
                <%= f.text_area :description, size: "20x14", class: "form-control" %>
            </div>
            
            <div class="btns">
                <div>
                    <%= f.submit "更新", class: "update btn btn-outline-primary" %>
                </div>
                <div class="cancel btn btn-outline-danger">
                    <i class="fas fa-times"></i>&nbsp;キャンセル
                </div>
            </div>

        <% end %>
</div>

<script>
    $('.cancel').click(() => {
        $('#modal-window').html("");
        $('.overlay').css({display: "none"});
    });
</script>