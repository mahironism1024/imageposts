<div class="row">
    <div class="col-md-4">
        <%= render "layouts/sidebar" %>
    </div>
    <div class="col-md-8">
        <h2>いいね！ランキング</h2>
        <div class="row no-gutters">
            <% if @like_ranking.any? %>
                <% @like_ranking.each_with_index do | ranking, index | %>
                    <h3>
                        <% if index == 0 %>
                            <i class="fas fa-crown" style="color: gold;"></i>
                        <% elsif index == 1 %>
                            <i class="fas fa-crown" style="color: silver"></i>
                        <% elsif index == 2 %>
                            <i class="fas fa-crown" style="color: #CD7F32"></i>
                        <% end %>
                        第<%= index + 1%>位
                    </h3>
                    <div class="card col-md-12">
                        <div class="row">
                            <div class="card-image text-center col-md-4">
                                <img src="<%= ranking.image.thumb %>" style="width: 100%; height: 250px; object-fit: cover;">
                            </div>
                            <div class="col-md-8">
                                <header class="card-title"> 
                                    <h4><%=link_to ranking.title, imagepost_path(ranking) %></h4>
                                </header>
                                <div class="card-content">
                                    <p><%= ranking.description %></p>
                                </div>
                                <div class="card-action">
                                    <div>
                                        <div>投稿者：<%= link_to ranking.user.name, user_path(ranking.user) %></div>
                                        <div>投稿日：<%= ranking.created_at.strftime('%Y/%m/%d') %></div>
                                    </div>
                                    <div class="icon-group">

                                        <div>
                                            <span><i class="far fa-eye text-info"></i><%= ranking.impressions.size %></span>
                                        </div>
                                        <div>
                                            <span><i class="far fa-comments text-info"></i><%= ranking.comments.size %></span>
                                        </div>
                                        <div>
                                            <span><i class="far fa-heart text-info"></i><%= ranking.likes.size %></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
            <% end %>
        </div>
    </div>
</div>