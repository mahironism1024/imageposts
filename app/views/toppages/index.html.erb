<div class="row p-5">
    
</div>

<div class="row">
    <% if @imageposts.any? %>
        <div class="col-md-8 order-md-2">
            <div class="row">
                <% @imageposts.each do |imagepost| %>
                <div class="mb-2 col-md-12">
                    <div class="card">
                        <div class="row no-gutters">
                            <div class="card-image text-center col-md-4">
                                <img src="<%= imagepost.image.thumb %>" style="width: 100%; height: 200px; object-fit: contain; background: #a1a1a1;">
                            </div>
                            <div class="card-body col-md-6">
                                <header class="card-title"> 
                                    <h4><%=link_to imagepost.title, imagepost_path(imagepost) %></h4>
                                </header>

                                <div class="card-action">
                                    
                                    <div>
                                        <div>投稿者：<%= link_to imagepost.user.name, user_path(imagepost.user) %></div>
                                        <div>投稿日：<%= imagepost.created_at.strftime('%Y/%m/%d') %></div>
                                    </div>
                                    
                                    <div class="icon-group">
                                        <div class="icon-item">
                                            <i class="far fa-eye text-info"></i><%= imagepost.impressions.size %>
                                        </div>
                                        <div class="icon-item">
                                            <i class="far fa-comments text-info"></i><%= imagepost.comments.size %>
                                        </div>
                                        <div class="icon-item">
                                            <i class="far fa-heart text-info"></i><%= imagepost.likes.size %>
                                        </div>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                   </div>
                </div>
                <% end %>
            </div>
        </div>
    <% end %>
    
    <div class="col-md-4 order-md-1">
        <%= render 'layouts/sidebar' %>
    </div>
</div>